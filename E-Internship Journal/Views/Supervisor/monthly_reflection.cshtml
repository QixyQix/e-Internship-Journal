<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Monthly Reflection</li>
    </ol>
    <!-- Example DataTables Card-->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="#">Weeks 1-4</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Weeks 5-8</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Weeks 9-12</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Week 13-17</a>
        </li>
    </ul>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fa fa-table"></i> Monthly Reflection
        </div>

        <div class="col-md-10 col-sm-10 col-xs-12">
            <div class="form-group ">
                <div class="form-group">
                    <label class="control-label col-sm-10 requiredField" for="reflection">In terms of workplace knowledge, communcation and interpersonal skills, reflect on areas you have done well:</label>
                    <textarea class="form-control" rows="5" id="reflection"></textarea>
                </div>
            </div>
        </div>

        <div class="col-md-10 col-sm-10 col-xs-12">
            <div class="form-group ">
                <div class="form-group">
                    <label class="control-label col-sm-10 requiredField" for="appliedlearnt">Reflect on how you have applied what you have learnt in school and workplace:</label>
                    <textarea class="form-control" rows="5" id="appliedLearnt"></textarea>
                </div>
            </div>
        </div>

        <div class="col-md-10 col-sm-10 col-xs-12">
            <div class="form-group ">
                <div class="form-group">
                    <label class="control-label col-sm-5 requiredField" for="donewell">Areas you have done well:</label>
                    <textarea class="form-control" rows="5" id="doneWell"></textarea>
                </div>
            </div>
        </div>

        <div class="col-md-10 col-sm-10 col-xs-12">
            <div class="form-group ">
                <div class="form-group">
                    <label class="control-label col-sm-5 requiredField" for="improve">Areas you would like to improve:</label>
                    <textarea class="form-control" rows="5" id="improve"></textarea>
                </div>
            </div>
        </div>

        <div class="col-md-10 col-sm-10 col-xs-12">
            <div class="form-group ">
                <div class="form-group">
                    <label class="control-label col-sm-3 requiredField" for="feedback">Feedback:</label>
                    <textarea class="form-control" rows="5" id="feedback"></textarea>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3"></label>
            <div class="btn pull-right">
                <input type="button" class="btn btn-outline-secondary" value="Reject" id="rejectButton" />
                <input type="button" class="btn btn-primary" value="Approve" id="approveButton" />
            </div>
        </div>
    </div>
</div>
<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>