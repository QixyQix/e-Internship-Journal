@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@*<h2>@ViewData["Title"].</h2>*@
<div class="col-lg-5 col-md-5 col-sm-12 mx-auto">
    <div class="card mt-5">

        <div class="card-header" style="font-size:1.05em">Change Password<a class="btn-sm btn-primary pull-right" asp-controller="Home" asp-action="Index">Back to Homepage</a></div>
        <div class="card-body">

            <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OldPassword" class="col-md-10 control-label"></label>
                    <div class="col-md-12">
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="col-md-10 control-label"></label>
                    <div class="col-md-12">
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="col-md-10 control-label"></label>
                    <div class="col-md-12">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <button type="submit" class="btn btn-primary btn-block">Change password</button>
                    </div>
                </div>
            </form>
            <div class="text-center">
                @*<a asp-action="Login">Forgot your password?</a>
                <a class="d-block small" href="login.html">Login Page</a>*@
            </div>
        </div>
        </div>
    </div>
<style>
    nav#mainNav {
        display: none;
    }
</style>
        @section Scripts {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        }
