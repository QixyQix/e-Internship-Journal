<script>
    var editor;
    $(document).ready(function () {
        var table = $('#dataTable').DataTable({
            "paging": true,
            "bPaginate": true,
            "bLengthChange": false,
            "bFilter": false,
            "bSort": false,
            "bInfo": true,
            "bAutoWidth": false,
            "asStripClasses": null,
            //--disable the sorting--
            dom: 'rtip',
            ajax: {
                url: '/Api/Task_Record',
                dataSrc: ''
            },
            order: [[1, 'asc']],
            columns: [
                { data: "DayRecordId" },
                { data: "Description" },
                {
                    data: null,
                    "sWidth": "10%",
                    "bSortable": false,
                    "mRender": function (o) { return '<button class="btn btn-sm btn-primary"><i class="fa fa-pencil-square-o"></i></button>&nbsp<button class="btn btn-sm btn-danger" id="deletebtn"><i class="fa fa-trash"></i></button>' }
                }
            ],
            language: {
                emptyTable: "No task was found, please create one.",
            }
        });

        $.ajax({
            url: '/api/Companies',
            method: 'GET',
            dataType: 'json',
            cache: false,
            success: function (data) {
                $('#companySelect').select2();
                for (i = 0; i < data.length; i++) {
                    //    $('#companySelect').val(data[i].)
                    $companyInputElement = $('#companySelect');
                    $optionElement = $('<option>').text(data[i].CompanyName).attr('value', data[i].CompanyId);
                    $companyInputElement.append($optionElement);
                }
            }//End of success
        });//End of Ajax

        $('#txtSearch').on("keyup", function (e) {
            console.dir($(this).val());
            var text = $(this).val();
            var options = $('#companySelect option');
            //var options = $('#companySelect').option;
            for (var i = 0; i < options.length; i++) {
                var option = options[i];
                var optionText = option.text;
                var lowerOptionText = optionText.toLowerCase();
                var lowerText = text.toLowerCase();
                var regex = new RegExp("^" + text, "i");
                var match = optionText.match(regex);
                var contains = lowerOptionText.indexOf(lowerText) != -1;
                if (match || contains) {

                    //option.selected = true;
                    return;
                }
                $(this).selectedIndex = 0;
            }
        });//End of txtSearch function

        $('#companySelect').on('change', function (e) {
            $('#txtSelected').val($('#companySelect option:selected').text());
        });//End of Select Change
        $('#btnSubmit').on('click', function (e) {

            $('#selectcompany').val($('#companySelect option:selected').text());// To set display text on input element
            $('#selectcompany').attr('value', ($('#companySelect option:selected').val())); // To set company value id to the input element

            $('#selectCompanyModal').modal('hide');
        });//End of button submit for popup
            });
    function findCompanyModal() {
        $('#selectCompanyModal').modal('show');
    }
</script>