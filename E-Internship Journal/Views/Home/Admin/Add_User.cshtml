@{
    ViewData["Title"] = "Add User Page";
}
<div class="container-fluid">
    <!-- Example DataTables Card-->
    <section id="contact">
        <div class="container">
            <h2 class="text-center text-uppercase text-secondary mb-0">Add User</h2>
            <hr />
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
                    <form name="sentMessage" id="contactForm" novalidate="novalidate">
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Batch</label>
                                <div class='input-group' id='findbatch'>
                                    <input type='text' class="form-control" id="selectBatch" placeholder="Batch" required="required" style="background-color:white" onclick="findBatchModal()" data-validation-required-message="Please select a batch." readonly />
                                    <div class="input-group-addon" onclick="findBatchModal()" style="background-color:white;border:none;">
                                        <i class="fa fa-search"></i>
                                    </div>
                                </div>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Full Name</label>
                                <input class="form-control" id="fullname" type="text" placeholder="Full Name" required="required" data-validation-required-message="Please enter name.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Mobile Number</label>
                                <input class="form-control" id="mobileNo" min="0" type="number" onkeydown="return FilterInput(event)" onpaste="handlePaste(event)" placeholder="Mobile Number" required="required" data-validation-required-message="Please enter mobile number.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Email Address</label>
                                <input class="form-control" id="email" type="email" placeholder="Email Address" required="required" data-validation-required-message="Please enter email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <br>
                        <div class="control-group">
                            <div class="form-inline">
                                <label>Role:</label>
                                &nbsp;
                                <select class="form-control" id="roleid" multiple="multiple">
                                    <option value="student">Student</option>
                                    <option value="supervisor">Supervisor</option>
                                    <option value="lo">LO</option>
                                    <option value="slo">SLO</option>
                                </select>
                            </div>
                        </div>
                        <br>
                        <div class="control-group">
                            <label class="radio-inline">
                                <input type="radio" name="optradio"> Activate
                            </label>
                            &nbsp;
                            <label class="radio-inline">
                                <input type="radio" name="optradio"> Deactivate
                            </label>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="form-group">
                            <div class="col-12">
                                <button class="btn btn-default pull-left" onclick="location.href='http://' + window.location.host +'/Home/ViewUser'">
                                    Back
                                </button>
                                <button class="btn btn-primary pull-right" name="submit" type="submit">
                                    Save
                                </button>
                            </div>
                        </div>
                        <br />
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Batch Modal -->
<div class="modal fade" id="batchModal" tabindex="-1" role="dialog" aria-labelledby="batchModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="batchModalLabel">Batch Assigned</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="col-12">
                    <form>
                        <div class="form-group">
                            <select id="batchSelect" size="6" style="width: 100%;"></select>
                        </div>
                        <div class="form-group">
                            <div class="col-12">
                                <div class="form-inline">
                                    <label>Selected: &nbsp;</label>
                                    <input class="form-control col-9" value="" readonly id="txtSelected">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnSubmit">Confirm</button>
                <!----   <a class="btn btn-primary" href="login.html">Logout</a>  -->
            </div>
        </div>
    </div>
</div>
<script>
        $(document).ready(function () {
        //  console.dir($('#contactForm input'));
        //  $('#batchName').jqBootstrapValidation();
        $.ajax({
            url: '/api/Batches/getAllBatches',
            method: 'GET',
            dataType: 'json',
            cache: false,
            success: function (data) {
                $('#batchSelect').select2();
                for (i = 0; i < data.length; i++) {
                    //    $('#batchSelect').val(data[i].)
                    $batchInputElement = $('#batchSelect');
                    $optionElement = $('<option>').text(data[i].BatchName).attr('value', data[i].BatchId);
                    $batchInputElement.append($optionElement);
                }
            }//End of success
        });//End of Ajax

        $('#txtSearch').on("keyup", function (e) {
            console.dir($(this).val());
            var text = $(this).val();
            var options = $('#batchSelect option');
            //var options = $('#batchSelect').option;
            for (var i = 0; i < options.length; i++) {
                var option = options[i];
                var optionText = option.text;
                var lowerOptionText = optionText.toLowerCase();
                var lowerText = text.toLowerCase();
                var regex = new RegExp("^" + text, "i");
                var match = optionText.match(regex);
                var contains = lowerOptionText.indexOf(lowerText) != -1;
                if (match || contains) {

                    //option.selected = true;
                    return;
                }
                $(this).selectedIndex = 0;
            }
        });//End of txtSearch function

        $('#batchSelect').on('change', function (e) {
            $('#txtSelected').val($('#batchSelect option:selected').text());
        });//End of Select Change
        $('#btnSubmit').on('click', function (e) {

            $('#selectBatch').val($('#batchSelect option:selected').text());// To set display text on input element
            $('#selectBatch').attr('value', ($('#batchSelect option:selected').val())); // To set batch value id to the input element

            $('#batchModal').modal('hide');
        });//End of button submit for popup
            
    });//End of document ready.
    $(document).ready(function () {
        $('#roleid').multiselect();
    });
    function findBatchModal() {
        $('#batchModal').modal('show');
        //http://www.dyn-web.com/tutorials/forms/select/multi-selected.php
        //please take a look at this for reference
    }
</script>