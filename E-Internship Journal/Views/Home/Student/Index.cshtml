@{
    ViewData["Title"] = "Home Page";
}

    <div class="container-fluid">
        <!-- Breadcrumbs -->
        <ol class="breadcrumb">
            @*<li class="breadcrumb-item">
                <a href="#">Internship Programme</a>
            </li>*@
            <li class="breadcrumb-item active">Homepage</li>
        </ol>
        <hr />
        <section id="dailyTask">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-left">
                        <h5 class="section-heading" style="text-decoration:underline;">DAILY TASK</h5>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='daily_task'">
                            <i class="fa fa-4x fa-calendar text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Daily Tasks</h3>
                            <p class="text-muted mb-0">Keep track and update on your daily tasks.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='attendance_summary'">
                            <i class="fa fa-4x fa-clock-o text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Attendance</h3>
                            <p class="text-muted mb-0">Key in your daily attendance or check on your attendance record.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <hr />
        <section id="monthlyTask">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-left">
                        <h5 class="section-heading" style="text-decoration:underline;">MONTHLY TASK</h5>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='competency_checklist'">
                            <i class="fa fa-4x fa-check-square text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Checklist</h3>
                            <p class="text-muted mb-0">Check monthly competency checklist, see what did you do.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='monthly_reflection'">
                            <i class="fa fa-4x fa-pencil-square text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Reflection</h3>
                            <p class="text-muted mb-0">Summarise what have you done this month.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='mentoring'">
                            <i class="fa fa-4x fa-eye text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Mentoring</h3>
                            <p class="text-muted mb-0">Record down mentoring session.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <hr />
        <section id="forViewing">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-left">
                        <h5 class="section-heading" style="text-decoration:underline;">FOR VIEWING</h5>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='guide'">
                            <i class="fa fa-4x fa-info text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Guideline</h3>
                            <p class="text-muted mb-0">Need help? Take a look at our guidelines to help you.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='grading'">
                            <i class="fa fa-4x fa-graduation-cap text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Grading</h3>
                            <p class="text-muted mb-0">Just do your best and your grades will be fine.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='touchpoint'">
                            <i class="fa fa-4x fa-comment-o text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Touchpoint</h3>
                            <p class="text-muted mb-0">View when will your liaison officer be visiting.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <hr />
        <section id="endIntern">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-left">
                        <h5 class="section-heading" style="text-decoration:underline;">END OF INTERNSHIP</h5>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='internship_survey'">
                            <i class="fa fa-4x fa-clipboard text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Survey</h3>
                            <p class="text-muted mb-0">Remember to do your internship survey before your internship ends.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <hr />
        <br />
    </div>
    <!-- /.container-fluid -->
    <!-- /.content-wrapper -->
    <script>
        $.ajax({
            url: '/Api/Internship_Record/getCurrentInternshipRecord',
            method: 'GET',
            dataType: 'json',
            cache: false,
            success: function (data) {
                console.dir(data);
                document.cookie = "InternshipRecordId = " + data.InternshipRecordId + ";";
            },
            fail: function (data) {
                alert(data.Message);
            }
        });

    </script>
