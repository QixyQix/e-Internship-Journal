<script>
    $(document).ready(function () {
        var studentInfoId = getCookie("StudentInfo");

        $.ajax({
            url: '/Api/Accounts/GetStudentInfo/' + studentInfoId,
            method: 'GET',
            dataType: 'json',
            cache: false,
            success: function (data) {
                console.dir(data);
                studentInfo = data;

                $('#name').text(studentInfo.FullName);
                $('#email').text(studentInfo.Email);
                $('#course').text(studentInfo.CourseCode);
                $('#company').text(studentInfo.CompanyName);
                $('#address').text(studentInfo.CompanyAddress);
                $('#supervisor').text(studentInfo.SupervisorName);
                $('#emailAddress').text(studentInfo.SupervisorEmail);

                if (studentInfo.MobileNo != null) {
                    $('#mobile').text(studentInfo.MobileNo);
                }
                if (studentInfo.SupervisorNumber != null) {
                    $('#contactNo').text(studentInfo.SupervisorNumber);

                }

            }
        });


        function getCookie(name) {
            var dc = document.cookie;
            var prefix = name + "=";
            var begin = dc.indexOf("; " + prefix);
            if (begin == -1) {
                begin = dc.indexOf(prefix);
                if (begin != 0) return null;
            } else {
                begin += 2;
            }
            var end = document.cookie.indexOf(";", begin);
            if (end == -1) {
                end = dc.length;
            }
            return unescape(dc.substring(begin + prefix.length, end));
        }
    });

</script>