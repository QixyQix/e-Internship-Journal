    function loadDataTable(data) {
        var g_table = $('#dataTable').DataTable({
            dom: "<'row'<'col-sm-12'tr>>" +
            "<'row'<'col-sm-4'l><'col-sm-8'p>>",
            destroy: true,
            data: data,
            columns: [
