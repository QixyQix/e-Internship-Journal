                    "mRender": function (data, type, row) {
                        return '<button class="btn btn-sm btn-primary" value="' + row.TaskRecordId + '">View</button>'
                    } //note under condition if no remarks was given the column would be blank
                }
            ],
            language: {
                emptyTable: "No Task was found, please create one.",
            }
        });//End of DataTable
        $('#dataTable tbody').on('click', 'button[class="btn btn-sm btn-primary"]', function (e) {
           // console.dir("FUCK ME");
            var $row = $(this).closest('tr');

            // Get row data
            var data = g_table.row($row).data();
