           // console.dir(data);
        });
    }
    function loadWeekOption() {
        $("#selectWeek option").remove();
        g_taskData.then(function (data) {
            var g_Month = [];
            var g_MonthRecordId = [];
            for (i = 0; i < data.length; i++) {
                if (g_Month.includes(Math.ceil(data[i].WeekNo / 4))) {
                    //Do nothing
                } else {

                    g_Month.push(Math.ceil(data[i].WeekNo / 4));
                    g_MonthRecordId.push(data[i].MonthRecordId);
                }

            };
            for (k = 0; k < g_Month.length; k++) {
                var tempWeek = g_Month[k] * 4;

                var tempWeekText = "Week " + (tempWeek - 3) + " - " + tempWeek;
                $weekInputElement = $('#selectWeek');
                $weekOptionElement = $('<option>').text(tempWeekText).attr('value', g_MonthRecordId[k]);
                $weekInputElement.append($weekOptionElement);

            }
            selectedWeek();
        });//End of Then function

    }
    function selectedWeek() {
        g_taskData.then(function (data) {
            var finalData = [];
            var selectedWeek = $('#selectWeek').val().split(',').map(Number);
            for (i = 0; i < data.length; i++) {
                if (selectedWeek.includes(data[i].MonthRecordId)) {
                    finalData.push(data[i]);

                }
            }//End of for loop
            loadDataTable(finalData);
        })
    }

</script>