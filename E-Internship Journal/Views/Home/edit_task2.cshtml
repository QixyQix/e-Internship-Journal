<script>
    var editor;
    $(document).ready(function () {
        editor = new $.fn.dataTable.Editor({
            ajax: {
                url: '/Api/Task_Record',
                dataSrc: ''
            },
            table: "#dataTable",
            idSrc: 'id',
            fields: [{
                label: "DayRecordId:",
                name: "DayRecordId"
            }, {
                label: "Description:",
                name: "Description"
            }
            ]
        });
        var table = $('#dataTable').DataTable({
            "bPaginate": false,
            "bLengthChange": false,
            "bFilter": false,
            "bSort": false,
            "bInfo": false,
            "bAutoWidth": false,
            "asStripClasses": null,
            //--disable the sorting--
            dom: 'rti',
            ajax: {
                url: '/Api/Task_Record',
                dataSrc: ''
            },
            order: [[1, 'asc']],
            columns: [
                { data: "DayRecordId", "sWidth": "10%" },
                { data: "Description", "sWidth": "80%" },
                {
                    data: null,
                    "bSortable": false,
                    "mRender": function (o) { return '<button class="btn btn-sm btn-danger" id="deletebtn"><i class="fa fa-times"></i></button>' }
                }
            ],
            language: {
                emptyTable: "No task was found, please create one.",
            }
        });

        // Activate an inline edit on click of a table cell
        $('#dataTable').on('click', 'tbody td:not(:first-child)', function (e) {
            editor.inline(this);
        });
        $('#dataTable tbody').on('click', 'button.btn-danger', function (e) {
            console.log("button 1 is click");
        });
    });
</script>