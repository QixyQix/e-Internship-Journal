@{
    ViewData["Title"] = "Home Page";
}

    <div class="container-fluid">
        <!-- Breadcrumbs -->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Homepage</a>
            </li>
            <li class="breadcrumb-item active">Student Journal</li>
        </ol>
        <div class="card" style="border-width:0px;">
            <div class="card-body">
                <div class="form-group">
                    <div class="pull-left form-inline">
                        <label>Student Name:&nbsp</label><select class="form-control" id="selectstudent">
                            <option>Amelia Goh</option>
                            <option>Cho Qi Xiang</option>
                            <option>Tan Chia Wei</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <section id="toDo">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-left">
                        <h5 class="section-heading" style="text-decoration:underline;">TO DO</h5>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='company_checklist'">
                            <i class="fa fa-4x fa-building text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Company</h3>
                            <p class="text-muted mb-0">Check on this checklist to ensure student(s) are progressing well.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <hr />
        <section id="forViewing">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-left">
                        <h5 class="section-heading" style="text-decoration:underline;">FOR VIEWING</h5>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='Task_History'">
                            <i class="fa fa-4x fa-calendar text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Daily Tasks</h3>
                            <p class="text-muted mb-0">View student's daily tasks.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='attendance_history'">
                            <i class="fa fa-4x fa-clock-o text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Attendance</h3>
                            <p class="text-muted mb-0">View student's daily attendance.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='competency_history'">
                            <i class="fa fa-4x fa-check-square text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Checklist</h3>
                            <p class="text-muted mb-0">View student's monthly competency checklist.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='reflection_history'">
                            <i class="fa fa-4x fa-pencil-square text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Reflection</h3>
                            <p class="text-muted mb-0">View student's monthly reflection</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='mentoring_history'">
                            <i class="fa fa-4x fa-eye text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Mentoring</h3>
                            <p class="text-muted mb-0">View student's records of mentoring session.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto" onclick="location.href='grading'">
                            <i class="fa fa-4x fa-graduation-cap text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Grading</h3>
                            <p class="text-muted mb-0">View student's grades.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <hr />
        <div class="card-body">
            <div class="form-group">
                <div class="col-12">
                    <button class="btn btn-default pull-left" onclick="window.history.go(-1); return false">
                        Back
                    </button>
                </div>
            </div>
        </div>

        <br>
    </div>
    <!-- /.container-fluid -->
