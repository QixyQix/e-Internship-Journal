<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>

    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Add New Task
        </div>
        <div class="card-body">
            <div class="container">
                <form action="https://formden.com/ajax/MlKtmY4x/" class="form-horizontal" method="post">

                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group ">
                            <label class="control-label col-sm-3 requiredField" for="date">
                                Date
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar">
                                        </i>
                                    </div>
                                    <input class="form-control" id="date" name="date" placeholder="MM/DD/YYYY" type="text">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10 col-sm-10 col-xs-12">
                        <div class="form-group ">
                            <div class="form-group">
                                <label class="control-label col-sm-3 requiredField" for="task">Task:</label>
                                <textarea class="form-control" rows="5" id="task"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10 col-sm-10 col-xs-12">
                        <div class="form-group">
                            <div class="pull-left">
                                <button class="btn btn-default" name="submit" type="submit">
                                    Back
                                </button>
                            </div>
                            <div class="pull-right">
                                <button class="btn btn-danger" name="submit" type="submit">
                                    <i class="fa fa-trash"></i>
                                </button>
                                <button class="btn btn-primary" name="submit" type="submit">
                                    Save
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
    </div>
